<% include ./partials/header %>

  <h1>
    <%=blog.title%>
  </h1>
  <div class="ui main text segment">
    <div class="ui top attached">
      <div class="item">
        <div class="ui centered rounded image">
          <img src="<%=blog.image%>">
        </div>
        <div class="content">
            <div class="meta">
                <span class="createdAt">Post created <%= moment(blog.created).startOf('hour').fromNow(); %></span>
                <span class="editlink"><a href="/blogs/<%= blog._id %>/edit">
                  <i class="edit icon"></i>Edit</a></span>
          </div>
          <div class="description">
            <p>
              <%= blog.body %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ./partials/footer %>