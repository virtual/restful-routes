<% include ./partials/header %>

  <div class="ui segment main text">
    <h1>Edit <%=blog.title%></h1>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=put" method="post">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title" id="" value="<%=blog.title%>">
      </div>
      <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" placeholder="image" id="" value="<%=blog.image%>">
      </div>
      <div class="field">
        <label>Blog Content</label>
        <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
      </div>
      <input class="ui brown basic button" type="submit">
    </form>
    <form class="ui form delete" action="/blogs/<%=blog._id%>?_method=delete" method="post">
      <input class="ui red  button" type="submit" value="Delete">
    </form>
  </div>
  <% include ./partials/footer %>