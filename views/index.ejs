<% include ./partials/header %>

  <h1>All About Hot Cocoa</h1>

  <div class="ui items">
    <% blogs.forEach(function(blog){ %>

      <div class="item">
        <div class="ui small image">
          <a href="/blogs/<%= blog.id %>"><img src="<%=blog.image%>"></a>
        </div>
        <div class="content">
          <div class="header">
            <a href="/blogs/<%= blog.id %>"><%=blog.title%></a>
          </div>
          <div class="meta">
            <span class="price"><%= moment(blog.created).startOf('hour').fromNow(); %></span>
          </div>
          <div class="description">
            <p>
              <%- blog.body.substring(0, 93) %>...</p>
            <a class="ui button basic brown" href="/blogs/<%= blog.id %>">Read more <i class="right chevron icon"></i></a>
          </div>
        </div>
      </div>
      <% }); %>
  </div>
 
  <% include ./partials/footer %>